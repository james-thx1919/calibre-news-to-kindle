#!/usr/bin/env python
from calibre.web.feeds.news import BasicNewsRecipe
from datetime import datetime

class GlobeAndMail(BasicNewsRecipe):
    title          = u'The Globe and Mail'
    oldest_article = 2
    max_articles_per_feed = 15 # Total ~75 articles. Keeps file size safe for Gmail.
    auto_cleanup   = True
    language       = 'en_CA'
    __author__     = 'Kovid Goyal/Modified'

    # --- Anti-Blocking & Speed Settings ---
    delay = 1
    simultaneous_downloads = 1 
    no_stylesheets = True
    no_thumbnails = True 

    # --- Custom Timestamp & Masthead ---
    def timefmt(self):
        # Uses standard Python datetime for reliability
        return ' ' + datetime.now().strftime('%b %d, %Y - %I:%M %p')

    def get_masthead_title(self):
        return self.title

    # --- Login Credentials ---
    needs_subscription = True
    requires_password = True
    login_url = 'https://www.theglobeandmail.com/registration/login/'

    def get_browser(self):
        br = BasicNewsRecipe.get_browser(self)
        if self.username and self.password:
            try:
                self.log("Attempting login...")
                br.open(self.login_url)
                # Select the form that contains the email field
                br.select_form(predicate=lambda f: "email" in [str(c.name) for c in f.controls])
                br['email'] = self.username
                br['password'] = self.password
                br.submit()
                self.log("Login successful.")
            except Exception as e:
                self.log("Login failed but proceeding anyway: %s" % str(e))
        return br

    def parse_index(self):
        sections = [
            ('Canada', 'https://www.theglobeandmail.com/canada/'),
            ('Politics', 'https://www.theglobeandmail.com/politics/'),
            ('Business', 'https://www.theglobeandmail.com/business/'),
            ('World', 'https://www.theglobeandmail.com/world/'),
            ('Opinion', 'https://www.theglobeandmail.com/opinion/')
        ]
        
        ans = []
        for section_title, url in sections:
            articles = []
            soup = self.index_to_soup(url)
            for a in soup.findAll('a', href=True):
                # Look for standard article links
                if '/article-' in a['href'] or (a['href'].startswith('/') and len(a['href']) > 30):
                    title = self.tag_to_string(a).strip()
                    if title and len(title) > 10:
                        url = 'https://www.theglobeandmail.com' + a['href'] if a['href'].startswith('/') else a['href']
                        articles.append({'title': title, 'url': url})
            
            if articles:
                # Remove duplicates within the section
                seen = set()
                final_articles = []
                for art in articles:
                    if art['url'] not in seen:
                        final_articles.append(art)
                        seen.add(art['url'])
                ans.append((section_title, final_articles))
        return ans

    # --- Image Compression to beat the 25MB Gmail Limit ---
    def postprocess_book(self, oeb, opts, log):
        from calibre.utils.img import resize_image
        for item in oeb.manifest:
            if item.media_type.startswith('image/'):
                try:
                    img_data = item.data
                    # Scale down to 400px wide and 40% quality
                    # This makes the Sunday paper significantly smaller
                    item.data = resize_image(img_data, width=400, height=600, format='JPEG', quality=40)
                except Exception as e:
                    log.error('Failed to compress image: %s' % e)
