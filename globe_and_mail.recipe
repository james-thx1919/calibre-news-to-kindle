#!/usr/bin/env python
from calibre.web.feeds.news import BasicNewsRecipe
import datetime

class GlobeAndMail(BasicNewsRecipe):
    title          = u'The Globe and Mail'
    oldest_article = 2
    max_articles_per_feed = 15
    auto_cleanup   = True
    language       = 'en_CA'
    __author__     = 'Kovid Goyal/Modified'

    # --- Simplified Timestamp ---
    # This avoids the "strftime" TypeError by returning a simple string
    def timefmt(self):
        return datetime.datetime.now().strftime(' [%Y-%m-%d]')

    # --- Anti-Blocking & Size Settings ---
    delay = 1
    simultaneous_downloads = 1
    no_stylesheets = True
    no_thumbnails = True

    # --- Login Credentials ---
    needs_subscription = True
    requires_password = True
    # Updated to the base login path to avoid the 404
    login_url = 'https://www.theglobeandmail.com/news/national/'

    def get_browser(self):
        br = BasicNewsRecipe.get_browser(self)
        if self.username and self.password:
            try:
                # We open the national page first, then find the login
                br.open('https://www.theglobeandmail.com/registration/login/')
                br.select_form(predicate=lambda f: "email" in [str(c.name) for c in f.controls])
                br['email'] = self.username
                br['password'] = self.password
                br.submit()
            except:
                self.log("Login login attempted...")
        return br

    def parse_index(self):
        sections = [
            ('Canada', 'https://www.theglobeandmail.com/canada/'),
            ('Politics', 'https://www.theglobeandmail.com/politics/'),
            ('Business', 'https://www.theglobeandmail.com/business/'),
            ('World', 'https://www.theglobeandmail.com/world/'),
            ('Opinion', 'https://www.theglobeandmail.com/opinion/')
        ]
        ans = []
        for section_title, url in sections:
            articles = []
            soup = self.index_to_soup(url)
            for a in soup.findAll('a', href=True):
                if '/article-' in a['href'] or (a['href'].startswith('/') and len(a['href']) > 30):
                    title = self.tag_to_string(a).strip()
                    if title and len(title) > 10:
                        full_url = 'https://www.theglobeandmail.com' + a['href'] if a['href'].startswith('/') else a['href']
                        articles.append({'title': title, 'url': full_url})
            if articles:
                seen = set()
                final_articles = []
                for art in articles:
                    if art['url'] not in seen:
                        final_articles.append(art)
                        seen.add(art['url'])
                ans.append((section_title, final_articles))
        return ans

    def postprocess_book(self, oeb, opts, log):
        from calibre.utils.img import resize_image
        for item in oeb.manifest:
            if item.media_type.startswith('image/'):
                try:
                    item.data = resize_image(item.data, width=400, height=600, format='JPEG', quality=40)
                except:
                    pass
